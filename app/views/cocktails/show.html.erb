<div class="container">
  <div class="card px-5 pb-5 my-5">
    <div class="my-4">
          <%= link_to cocktails_path do %>
          <i class="fas fa-arrow-left"></i> Back
          <% end %>
            <h1><%= @cocktail.name %></h1>

          </div>
  <% if flash[:notice] %>
<div class="flash flash-success alert alert-dismissible fade show" role="alert">
  <span><strong>Yay!</strong> üç∏ you successfully created a <%= @cocktail.name %></span>
  <a data-dismiss="alert" aria-label="Close">
    <i class="fas fa-times"></i>
  </a>
</div>
  <% elsif flash[:alert] %>
<div class="flash flash-danger alert alert-dismissible fade show" role="alert">
  <span><strong>Yay!</strong>Successfully destroyed a <%= @cocktail.name %> dose</span>
  <a data-dismiss="alert" aria-label="Close">
    <i class="fas fa-times"></i>
  </a>
</div>
  <% end %>

    <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
<div >
    <h4>Cocktail doses:</h4>
  <% @cocktail.doses.each do |d| %>
    <p class="m-0">Ingredient: <%= d.ingredient.name %> | Dose: <%= d.description %>
      <%= link_to raw(' <i class="far fa-trash-alt"></i>'), dose_path(d), method: :delete, data: { confirm: 'Are you sure?' } %></p>
  <% end %>
    <%= link_to raw('<i class="fas fa-plus"></i> dose'), new_cocktail_dose_path(@cocktail), class: 'btn btn-primary mt-3' %>

      </div>
</div>
</div>

